<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <stroke
                android:width="2dp"
                android:color="@color/steam_login_text_border"/>

            <padding
                android:bottom="2dp"
                android:top="2dp"
                android:left="2dp"
                android:right="2dp"/>

            <corners
                android:radius="2px"/>
        </shape>
    </item>

    <!-- Background color -->
    <item>
        <shape>
            <solid
                android:color="@color/steam_list_background"/>
        </shape>
    </item>

    <!-- Pattern overlay on top of background color -->
    <item>
        <bitmap
            android:src="@drawable/friendslist_pattern"
            android:tileMode="repeat"/>
    </item>

</layer-list>